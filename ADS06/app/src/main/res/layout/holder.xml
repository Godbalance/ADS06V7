<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/toolbar_style_holder"

    android:orientation="vertical">

    <LinearLayout
        android:layout_marginRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/res_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="КЛЮЧ РОЖКОВЫЙ 8 Х 10 ММ SPARTA"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_more_hold"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_more"
            tools:srcCompat="@drawable/ic_more"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/res_bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="ШК: 8904101700031"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/res_lm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text=" ЛМ: 13813043"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="2dp"
        android:background="@drawable/style_res"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/res_adres"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:ems="10"
            android:text="Адрес:"/>

        <TextView
            android:id="@+id/res_stock"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="50шт" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/res_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изменено: 2020-04-12" />

        <TextView
            android:layout_marginHorizontal="20dp"
            android:id="@+id/res_pk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кем:" />

    </LinearLayout>
</LinearLayout>